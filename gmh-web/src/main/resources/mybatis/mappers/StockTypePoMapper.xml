<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zes.squad.gmh.mapper.StockTypeMapper">
	<resultMap id="BaseResultMap" type="com.zes.squad.gmh.entity.po.StockTypePo">
		<id column="id" jdbcType="BIGINT" property="id" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="created_time" jdbcType="TIMESTAMP" property="createdTime" />
		<result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
	</resultMap>
	<sql id="Base_Column_List">
		`id`, `name`, `created_time`, `modified_time`
	</sql>
	<insert id="insert" parameterType="com.zes.squad.gmh.entity.po.StockTypePo">
		<selectKey keyProperty="id" order="AFTER" resultType="long">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO stock_type(`name`) VALUES (#{name, jdbcType=VARCHAR})
	</insert>
	<delete id="deleteById" parameterType="long">
		DELETE FROM stock_type WHERE `id` = #{id, jdbcType=BIGINT}
	</delete>
	<delete id="batchDelete" parameterType="long">
		DELETE FROM stock_type WHERE `id` IN
		<foreach collection="list" item="id" separator="," open="(" close=")">
			#{id, jdbcType=BIGINT}
		</foreach>
	</delete>
	<update id="updateSelective" parameterType="com.zes.squad.gmh.entity.po.StockTypePo">
		UPDATE stock_type
		<set>
			<if test="name != null and name != ''">
				`name` = #{name, jdbcType=VARCHAR},
			</if>
		</set>
		WHERE `id` = #{id, jdbcType=BIGINT}
	</update>
	<select id="selectById" parameterType="long" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List"/>
		FROM stock_type
		WHERE `id` = #{id, jdbcType=BIGINT}
		LIMIT 1
	</select>
	<select id="selectByName" parameterType="string" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List"/>
		FROM stock_type
		WHERE `name` = #{name, jdbcType=VARCHAR}
		LIMIT 1
	</select>
	<select id="selectByCondition"
		parameterType="com.zes.squad.gmh.entity.condition.StockTypeQueryCondition"
		resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM stock_type st
		<where>
			<if test="search != null and search != ''">
				<bind name="condition" value="'%' + search + '%'"/>
				st.`name` LIKE #{condition, jdbcType=VARCHAR}
			</if>
		</where>
	</select>
	<select id="selectAll" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM stock_type
	</select>
</mapper>